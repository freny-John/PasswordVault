<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bridge.passwordholder.AddAccountFragment"
    android:background="@color/bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:gravity="center_vertical"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:background="@color/primary"
        app:theme="@style/AppTheme" >

        <com.andexert.library.RippleView
            android:id="@+id/back_button_ripple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_color="@color/bg"
            app:rv_centered="true"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="left"
                android:contentDescription="@string/back"
                />
        </com.andexert.library.RippleView>
        <com.bridge.passwordholder.uicomponents.PMTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_details"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/my_toolbar"
        android:id="@+id/topLayout"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >


        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="16dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center">
                <com.andexert.library.RippleView

                    android:id="@+id/delete_button_ripple"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:rv_color="@color/primary"
                    app:rv_centered="true"
                    app:rv_rippleDuration="150"
                    >
                    <FrameLayout

                        android:layout_width="56dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"

                        android:layout_height="56dp">
                        <com.bridge.passwordholder.uicomponents.RoundedLetterView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/rlv_name_view"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            tools:visibility="visible"
                            app:backgroundColorValue="@color/grey"
                            app:titleColor="@android:color/white"
                            app:titleSize="35dp"
                            app:titleText=" " />

                        <ImageView android:id="@+id/btn_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/delete"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:padding="5dp"
                            android:textColor="@android:color/white"
                            android:contentDescription="@string/delete"/>

                    </FrameLayout>
                </com.andexert.library.RippleView>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="76dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="76dp"
                android:gravity="center">

                <com.bridge.passwordholder.uicomponents.RoundedLetterView
                    android:id="@+id/detailLetterView"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    tools:visibility="visible"
                    app:backgroundColorValue="@color/primary_light"
                    app:titleColor="@android:color/white"
                    app:titleSize="35dp"
                    app:titleText="A"
                    android:layout_gravity="center" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <com.andexert.library.RippleView

                    android:id="@+id/edit_button_ripple"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:rv_color="@color/primary"
                    app:rv_centered="true"
                    app:rv_rippleDuration="150"
                    >
                    <FrameLayout

                        android:layout_width="56dp"
                        android:layout_gravity="center"
                        android:layout_height="56dp">
                        <com.bridge.passwordholder.uicomponents.RoundedLetterView
                            android:id="@+id/rlv_name_view1"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            tools:visibility="visible"
                            app:backgroundColorValue="@color/grey"
                            app:titleColor="@android:color/white"
                            app:titleSize="35dp"
                            app:titleText=" " />

                        <ImageView android:id="@+id/btn_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit"
                            android:foregroundGravity="center"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:tag="@string/btn_edit"
                            android:contentDescription="@string/edit"
                            android:textColor="@android:color/white"/>
                    </FrameLayout>
                </com.andexert.library.RippleView>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.bridge.passwordholder.uicomponents.PMTextViewBold
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:enabled="false"
                android:gravity="center"
                android:shadowColor="@color/grey"
                android:textColor="@color/primary"
                android:textSize="@dimen/account_head_text_size"
                android:hint="@string/account_type" />
            <com.bridge.passwordholder.uicomponents.PMTextView
                android:layout_below="@+id/account_name"
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/last_modified"
                android:padding="4dp"
                android:textColor="@color/dark_grey"
                android:hint="@string/account_type" />


        </RelativeLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topLayout">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <com.bridge.passwordholder.uicomponents.PMTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/account_username" />
                <com.bridge.passwordholder.uicomponents.PMTextViewBold
                    android:id="@+id/account_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.bridge.passwordholder.uicomponents.PMTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/password" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                    <com.bridge.passwordholder.uicomponents.PMTextViewBold
                        android:id="@+id/account_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_toLeftOf="@+id/eye_view_switcher"
                        />
                    <ViewSwitcher
                        android:id="@+id/eye_view_switcher"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:tag="0"
                        android:padding="8dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/eye_not_hidden"
                            android:contentDescription="@string/visible_password"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/eye_hidden"
                            android:contentDescription="@string/hidden_password"/>

                    </ViewSwitcher>
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"></View>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">
                <com.bridge.passwordholder.uicomponents.PMTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/notes" />
                <com.bridge.passwordholder.uicomponents.PMTextViewBold
                    android:id="@+id/account_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"></View>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
