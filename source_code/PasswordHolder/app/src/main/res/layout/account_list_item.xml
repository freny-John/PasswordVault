<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/marginright"
    android:layout_marginTop="@dimen/margintop"
    android:layout_marginBottom="@dimen/marginbottom">

    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        rv_centered="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:gravity="left"
            android:id="@+id/container"
            android:paddingLeft="5dp"
            android:background="@color/accent"
            >
            <passwordholder.bridge.com.passwordholder.uicomponents.RoundedLetterView
                android:layout_gravity="center_vertical"
                android:id="@+id/rlv_name_view"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginRight="16dp"
                tools:visibility="visible"
                app:backgroundColorValue="@color/primary_dark"
                app:titleColor="@android:color/white"
                app:titleSize="35dp"
                app:titleText="A" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <passwordholder.bridge.com.passwordholder.uicomponents.PMTextView
                    android:id="@+id/account_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_item_text_head_size"
                    />
                <passwordholder.bridge.com.passwordholder.uicomponents.PMTextView
                    android:id="@+id/account_details_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_item_text_sub_size"
                    android:text="sample text"
                    android:layout_below="@+id/account_name_txt"
                    />

            </RelativeLayout>
        </LinearLayout>
    </com.andexert.library.RippleView>
</LinearLayout>
