<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    tools:context="passwordholder.bridge.com.passwordholder.PinFragment">

   <!-- <include layout="@layout/header_layout" />-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/header_pane">

        <LinearLayout
            android:id="@+id/indicate_layout"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                android:id="@+id/ind1"
                android:layout_width="@dimen/ind_width"
                android:layout_height="@dimen/ind_width"
                style="@style/key_indicate_style">

            </passwordholder.bridge.com.passwordholder.uicomponents.PMButton>
            <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                android:id="@+id/ind2"
                android:layout_width="@dimen/ind_width"
                android:layout_height="@dimen/ind_width"
                style="@style/key_indicate_style">

            </passwordholder.bridge.com.passwordholder.uicomponents.PMButton>
            <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                android:id="@+id/ind3"
                android:layout_width="@dimen/ind_width"
                android:layout_height="@dimen/ind_width"
                style="@style/key_indicate_style">

            </passwordholder.bridge.com.passwordholder.uicomponents.PMButton>
            <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                android:id="@+id/ind4"
                android:layout_width="@dimen/ind_width"
                android:layout_height="@dimen/ind_width"
                style="@style/key_indicate_style">

            </passwordholder.bridge.com.passwordholder.uicomponents.PMButton>
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/indicate_layout"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/row1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key1"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:tag="1"
                    android:text="1"
                    />
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key2"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:tag="2"

                    android:text="2"
                    />
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key3"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:text="3"
                    android:tag="3"

                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/row2"
                android:layout_below="@+id/row1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key4"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:tag="4"
                    android:text="4"
                    />
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key5"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:text="5"
                    android:tag="5"
                    />
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key6"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:text="6"
                    android:tag="6"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/row3"
                android:layout_below="@+id/row2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key7"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:text="7"
                    android:tag="7"
                    />
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key8"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:text="8"
                    android:tag="8"
                    />
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key9"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:text="9"
                    android:tag="9"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/row4"
                android:layout_below="@+id/row3"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/keyb"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keybackspace"
                    android:text="X"
                    android:tag="b"
                    />

                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/key0"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keystyle"
                    android:text="0"
                    android:tag="0"
                    />
                <passwordholder.bridge.com.passwordholder.uicomponents.PMButton
                    android:id="@+id/confirm"
                    android:layout_width="@dimen/key_width"
                    android:layout_height="@dimen/key_width"
                    style="@style/keyset"
                    android:text="@string/set"
                    android:tag="@string/done"
                    />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
